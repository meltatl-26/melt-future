{
  "$schema": "https://tr.designtokens.org/format/",
  "$metadata": {
    "name": "MELT Atlanta Design Tokens",
    "version": "1.0.0",
    "date": "2026-02-19",
    "description": "Complete design token system for MELT Atlanta. W3C Design Tokens Community Group format. Compatible with Figma Token Studio and Style Dictionary.",
    "source": "src/styles/shared/globals.css, src/styles/shared/typography.css"
  },

  "color": {
    "$description": "All brand colors — primary, secondary, neutral, semantic, surface, service",

    "brand": {
      "$description": "Core MELT brand palette",

      "lime-green": {
        "$type": "color",
        "$value": "#D4FF00",
        "$description": "SIGNATURE. The activation signal. CTAs, focus rings, scrollbar, hover highlights. Never use as a background fill.",
        "pantone": "PMS 389 C",
        "cmyk": "17, 0, 100, 0",
        "rgb": "212, 255, 0",
        "hsl": "79°, 100%, 50%",
        "wcag-vs-navy": "AAA (10.8:1)",
        "wcag-vs-black": "AAA (14.7:1)"
      },
      "lime-green-light": {
        "$type": "color",
        "$value": "#E5FF66",
        "$description": "Lime green tint — hover states, subtle backgrounds"
      },
      "royal-blue": {
        "$type": "color",
        "$value": "#3356FF",
        "$description": "The connector. Interactive elements, links, ContactCTA background, service marks.",
        "pantone": "PMS 2728 C",
        "cmyk": "80, 67, 0, 0",
        "rgb": "51, 86, 255",
        "hsl": "229°, 100%, 60%",
        "wcag-vs-white": "AA large (3.2:1)"
      },
      "royal-blue-light": {
        "$type": "color",
        "$value": "#B3C2FF",
        "$description": "Royal blue tint — subtle backgrounds, disabled states"
      },
      "navy": {
        "$type": "color",
        "$value": "#0A0A6B",
        "$description": "PRIMARY DARK BACKGROUND. The brand's gravity. The structure before the activation.",
        "pantone": "PMS 2755 C",
        "cmyk": "90, 85, 0, 58",
        "rgb": "10, 10, 107",
        "hsl": "240°, 83%, 23%",
        "wcag-vs-white": "AAA (14.1:1)"
      },
      "navy-light": {
        "$type": "color",
        "$value": "#4A4A9B",
        "$description": "Navy at mid-weight — secondary dark elements"
      },
      "yellow": {
        "$type": "color",
        "$value": "#FFD600",
        "$description": "The highlight. Secondary accent, sports/CPG contexts, service mark for Retail.",
        "pantone": "PMS 012 C",
        "cmyk": "0, 14, 100, 0",
        "rgb": "255, 214, 0",
        "hsl": "50°, 100%, 50%",
        "wcag-vs-navy": "AAA (9.6:1)"
      },
      "yellow-light": {
        "$type": "color",
        "$value": "#FFF3B0",
        "$description": "Yellow tint"
      },
      "golden-yellow": {
        "$type": "color",
        "$value": "#F4B942",
        "$description": "The prestige marker. Eyebrow text on dark sections, stat display numbers, awards references.",
        "pantone": "PMS 7549 C",
        "cmyk": "0, 24, 73, 4",
        "rgb": "244, 185, 66",
        "hsl": "40°, 89%, 61%",
        "wcag-vs-navy": "AAA (7.5:1)"
      },
      "coral": {
        "$type": "color",
        "$value": "#FF4040",
        "$description": "The human moment. Testimonial quote marks, College/NIL service accent, error states.",
        "pantone": "PMS 485 C",
        "cmyk": "0, 75, 75, 0",
        "rgb": "255, 64, 64",
        "hsl": "0°, 100%, 63%",
        "wcag-vs-navy": "AA (4.8:1)"
      },
      "coral-light": {
        "$type": "color",
        "$value": "#FFB3B3",
        "$description": "Coral tint"
      },
      "cyan": {
        "$type": "color",
        "$value": "#00F0FF",
        "$description": "The intelligence layer. Logo hover on white, Sponsorship service accent, WebGL/data visualization.",
        "pantone": "PMS 3105 C",
        "cmyk": "100, 0, 0, 0",
        "rgb": "0, 240, 255",
        "hsl": "184°, 100%, 50%",
        "wcag-vs-navy": "AAA (11.4:1)"
      }
    },

    "neutral": {
      "$description": "Neutral palette — backgrounds, text, borders",

      "white": {
        "$type": "color",
        "$value": "#FFFFFF",
        "$description": "Primary light background, reversed text on dark"
      },
      "off-white": {
        "$type": "color",
        "$value": "#F5F5F7",
        "$description": "Alternate light section background — slightly cooler than white. Used for Featured Work, Why MELT sections."
      },
      "gray-100": {
        "$type": "color",
        "$value": "#E8E8EA",
        "$description": "Dividers, borders, form field borders"
      },
      "gray-300": {
        "$type": "color",
        "$value": "#949292",
        "$description": "Secondary text on dark backgrounds, footer links, captions, descriptors"
      },
      "gray-900": {
        "$type": "color",
        "$value": "#1A1A1A",
        "$description": "Body text on light backgrounds"
      },
      "black": {
        "$type": "color",
        "$value": "#000000",
        "$description": "Header backgrounds, maximum contrast, presentation slides"
      }
    },

    "semantic": {
      "$description": "Functional/status colors",

      "success": {
        "$type": "color",
        "$value": "#2E7D32",
        "$description": "Success text color"
      },
      "success-bg": {
        "$type": "color",
        "$value": "#E8F5E9",
        "$description": "Success background"
      },
      "success-border": {
        "$type": "color",
        "$value": "#C8E6C9",
        "$description": "Success border"
      },
      "error": {
        "$type": "color",
        "$value": "#C62828",
        "$description": "Error text color"
      },
      "error-bg": {
        "$type": "color",
        "$value": "#FFEBEE",
        "$description": "Error background"
      },
      "error-border": {
        "$type": "color",
        "$value": "#FFCDD2",
        "$description": "Error border"
      },
      "warning": {
        "$type": "color",
        "$value": "#FFD600",
        "$description": "Warning — reuses yellow"
      },
      "info": {
        "$type": "color",
        "$value": "#3356FF",
        "$description": "Info — reuses royal-blue"
      }
    },

    "surface": {
      "$description": "Semantic surface/background aliases",

      "bg-primary": {
        "$type": "color",
        "$value": "{color.neutral.white}",
        "$description": "Default light background"
      },
      "bg-dark": {
        "$type": "color",
        "$value": "{color.brand.navy}",
        "$description": "Default dark background"
      },
      "text-primary": {
        "$type": "color",
        "$value": "{color.neutral.gray-900}",
        "$description": "Default body text on light"
      },
      "text-inverse": {
        "$type": "color",
        "$value": "{color.neutral.white}",
        "$description": "Text on dark backgrounds"
      },
      "text-muted": {
        "$type": "color",
        "$value": "{color.neutral.gray-300}",
        "$description": "Secondary text, captions, metadata"
      },
      "accent-primary": {
        "$type": "color",
        "$value": "{color.brand.lime-green}",
        "$description": "Primary accent — CTAs, highlights"
      },
      "accent-secondary": {
        "$type": "color",
        "$value": "{color.brand.yellow}",
        "$description": "Secondary accent"
      }
    },

    "service": {
      "$description": "One accent color per service area",

      "experiential": {
        "$type": "color",
        "$value": "{color.brand.lime-green}",
        "$description": "01 — Experiential Event Marketing & Sampling"
      },
      "social": {
        "$type": "color",
        "$value": "{color.brand.golden-yellow}",
        "$description": "02 — Social Content & Influencer Programs"
      },
      "sports": {
        "$type": "color",
        "$value": "{color.brand.royal-blue}",
        "$description": "03 — Sports, Music & Culinary Marketing"
      },
      "retail": {
        "$type": "color",
        "$value": "{color.brand.yellow}",
        "$description": "04 — Retail & National Promotions"
      },
      "college": {
        "$type": "color",
        "$value": "{color.brand.coral}",
        "$description": "05 — College & NIL Marketing"
      },
      "sponsorship": {
        "$type": "color",
        "$value": "{color.brand.cyan}",
        "$description": "06 — Sponsorship Strategy & Negotiation"
      }
    }
  },

  "typography": {
    "$description": "Font families, weights, fluid size scale, line heights, letter spacing",

    "fontFamily": {
      "headline": {
        "$type": "fontFamily",
        "$value": "'industry', sans-serif",
        "$description": "Industry — TypeKit CDN. Industrial, condensed, geometric. All headings, navigation, eyebrows, display text.",
        "source": "https://use.typekit.net/clv7xin.css"
      },
      "body": {
        "$type": "fontFamily",
        "$value": "'Satoshi', sans-serif",
        "$description": "Satoshi — Fontshare CDN. Clean geometric sans-serif. All body copy, UI labels, form fields.",
        "source": "https://api.fontshare.com/v2/css?f[]=satoshi@300,400,500,700&display=swap"
      }
    },

    "fontWeight": {
      "light": {
        "$type": "fontWeight",
        "$value": 300,
        "$description": "Satoshi Light — captions, legal text, email signature descriptor"
      },
      "regular": {
        "$type": "fontWeight",
        "$value": 400,
        "$description": "Satoshi Regular — body copy, form inputs, article text"
      },
      "medium": {
        "$type": "fontWeight",
        "$value": 500,
        "$description": "Satoshi Medium / Industry Demi — UI labels, sub-nav, h4"
      },
      "bold": {
        "$type": "fontWeight",
        "$value": 700,
        "$description": "Satoshi Bold / Industry Bold — h1–h3, stat numbers, pull quotes"
      },
      "heavy": {
        "$type": "fontWeight",
        "$value": 800,
        "$description": "Industry Black — display headings"
      },
      "ultra": {
        "$type": "fontWeight",
        "$value": 900,
        "$description": "Industry Ultra — logo wordmark, hero display, reserved for dominant moments"
      }
    },

    "fontSize": {
      "$description": "Fluid type scale using CSS clamp(). All values are CSS clamp() expressions.",

      "display-hero": {
        "$type": "dimension",
        "$value": "clamp(4rem, 12vw, 8rem)",
        "$description": "64px → 128px. Hero section h1, cinematic title moments.",
        "min-px": "64",
        "max-px": "128"
      },
      "display-massive": {
        "$type": "dimension",
        "$value": "clamp(3rem, 10vw, 6.5rem)",
        "$description": "48px → 104px. Campaign-style headings.",
        "min-px": "48",
        "max-px": "104"
      },
      "display-section": {
        "$type": "dimension",
        "$value": "clamp(2.5rem, 8vw, 5rem)",
        "$description": "40px → 80px. Section title moments.",
        "min-px": "40",
        "max-px": "80"
      },
      "h1": {
        "$type": "dimension",
        "$value": "clamp(2.5rem, 5vw + 1rem, 5rem)",
        "$description": "40px → 80px. Standard page headings.",
        "min-px": "40",
        "max-px": "80"
      },
      "h2": {
        "$type": "dimension",
        "$value": "clamp(2rem, 3.5vw + 0.5rem, 3.5rem)",
        "$description": "32px → 56px. Section headings.",
        "min-px": "32",
        "max-px": "56"
      },
      "h3": {
        "$type": "dimension",
        "$value": "clamp(1.5rem, 2vw + 0.5rem, 2.25rem)",
        "$description": "24px → 36px. Sub-sections.",
        "min-px": "24",
        "max-px": "36"
      },
      "h4": {
        "$type": "dimension",
        "$value": "clamp(1.25rem, 1vw + 0.75rem, 1.5rem)",
        "$description": "20px → 24px. Card headings, list headers.",
        "min-px": "20",
        "max-px": "24"
      },
      "body-lg": {
        "$type": "dimension",
        "$value": "clamp(1.125rem, 0.5vw + 1rem, 1.375rem)",
        "$description": "18px → 22px. Lead paragraphs, hero subheadlines.",
        "min-px": "18",
        "max-px": "22"
      },
      "body": {
        "$type": "dimension",
        "$value": "clamp(1rem, 0.5vw + 0.875rem, 1.125rem)",
        "$description": "16px → 18px. Standard body copy. Minimum 16px.",
        "min-px": "16",
        "max-px": "18"
      },
      "caption": {
        "$type": "dimension",
        "$value": "clamp(0.75rem, 0.25vw + 0.7rem, 0.875rem)",
        "$description": "12px → 14px. Image captions, legal text, metadata.",
        "min-px": "12",
        "max-px": "14"
      },
      "eyebrow": {
        "$type": "dimension",
        "$value": "clamp(0.6875rem, 0.125vw + 0.65rem, 0.75rem)",
        "$description": "11px → 12px. Section labels above headings. Always uppercase, wide tracking.",
        "min-px": "11",
        "max-px": "12"
      },
      "nav": {
        "$type": "dimension",
        "$value": "0.875rem",
        "$description": "14px (fixed). Navigation links.",
        "min-px": "14",
        "max-px": "14"
      },
      "stat-number": {
        "$type": "dimension",
        "$value": "clamp(3rem, 4vw + 1.5rem, 4.5rem)",
        "$description": "48px → 72px. Proof statistics display.",
        "min-px": "48",
        "max-px": "72"
      }
    },

    "lineHeight": {
      "tightest": {
        "$type": "number",
        "$value": 1.0,
        "$description": "Hero/display text — maximum compression"
      },
      "tight": {
        "$type": "number",
        "$value": 1.1,
        "$description": "H1–H2 headings"
      },
      "snug": {
        "$type": "number",
        "$value": 1.3,
        "$description": "H3–H4, pull quotes, testimonials"
      },
      "normal": {
        "$type": "number",
        "$value": 1.5,
        "$description": "Captions, UI labels"
      },
      "relaxed": {
        "$type": "number",
        "$value": 1.6,
        "$description": "Body copy — standard reading comfort"
      }
    },

    "letterSpacing": {
      "tightest": {
        "$type": "dimension",
        "$value": "-0.03em",
        "$description": "Display/hero text — maximum density"
      },
      "tight": {
        "$type": "dimension",
        "$value": "-0.02em",
        "$description": "H1–H3 headings — standard tight"
      },
      "normal": {
        "$type": "dimension",
        "$value": "0em",
        "$description": "Body copy — natural spacing"
      },
      "wide": {
        "$type": "dimension",
        "$value": "0.08em",
        "$description": "Navigation links, button labels"
      },
      "widest": {
        "$type": "dimension",
        "$value": "0.15em",
        "$description": "Eyebrow labels — uppercase identification marker"
      }
    }
  },

  "spacing": {
    "$description": "8px base unit spacing scale. All spatial decisions should snap to this grid.",

    "xs": {
      "$type": "dimension",
      "$value": "8px",
      "$description": "Minimum — icon gaps, tag padding, sub-component spacing only"
    },
    "sm": {
      "$type": "dimension",
      "$value": "16px",
      "$description": "Button padding (vertical), form field gaps, list item spacing"
    },
    "md": {
      "$type": "dimension",
      "$value": "24px",
      "$description": "Card padding, between related elements — the default 'comfortable' gap"
    },
    "lg": {
      "$type": "dimension",
      "$value": "48px",
      "$description": "Between content groups within a section"
    },
    "xl": {
      "$type": "dimension",
      "$value": "80px",
      "$description": "Standard section padding-block"
    },
    "2xl": {
      "$type": "dimension",
      "$value": "120px",
      "$description": "Major section separation"
    },
    "3xl": {
      "$type": "dimension",
      "$value": "160px",
      "$description": "Hero sections top padding"
    },
    "4xl": {
      "$type": "dimension",
      "$value": "200px",
      "$description": "Extreme whitespace — editorial, cinematic moments only"
    }
  },

  "borderRadius": {
    "$description": "Three-tier radius system",

    "sm": {
      "$type": "dimension",
      "$value": "12px",
      "$description": "Cards, form elements, pills, small UI components"
    },
    "md": {
      "$type": "dimension",
      "$value": "20px",
      "$description": "Info blocks, story cards, medium containers"
    },
    "lg": {
      "$type": "dimension",
      "$value": "40px",
      "$description": "Buttons (.btn), featured work cards — the signature rounded button shape"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Pills, circular elements (back-to-top, avatar)"
    }
  },

  "shadow": {
    "$description": "Named shadow levels. No dedicated tokens exist in globals.css — these are sourced from component CSS patterns.",

    "surface": {
      "$type": "shadow",
      "$value": "0 2px 20px rgba(0, 0, 0, 0.3)",
      "$description": "Header solid state, modal backdrop — base elevation"
    },
    "elevated": {
      "$type": "shadow",
      "$value": "0 2px 20px rgba(0, 0, 0, 0.2)",
      "$description": "Header inverted state — lighter elevation"
    },
    "hover": {
      "$type": "shadow",
      "$value": "0 12px 40px rgba(0, 0, 0, 0.08)",
      "$description": "Card hover state — subtle lift"
    },
    "dropdown": {
      "$type": "shadow",
      "$value": "0 10px 40px rgba(0, 0, 0, 0.15)",
      "$description": "Dropdown menus, tooltips"
    },
    "cta-glow": {
      "$type": "shadow",
      "$value": "0 8px 24px rgba(212, 255, 0, 0.3)",
      "$description": "Primary button hover — lime-green glow effect"
    }
  },

  "motion": {
    "$description": "Animation durations and easing functions",

    "duration": {
      "fast": {
        "$type": "duration",
        "$value": "200ms",
        "$description": "Micro-interactions — hover state color changes, focus rings"
      },
      "standard": {
        "$type": "duration",
        "$value": "600ms",
        "$description": "Standard transitions — page elements, entrance animations"
      },
      "slow": {
        "$type": "duration",
        "$value": "1000ms",
        "$description": "Long transitions — image reveals, scroll-triggered sequences"
      }
    },

    "easing": {
      "brand": {
        "$type": "cubicBezier",
        "$value": [0.42, 0, 0.04, 1],
        "$description": "BRAND STANDARD. The signature MELT easing — used for all non-infinite animations. --ease-custom in CSS."
      },
      "in-out": {
        "$type": "cubicBezier",
        "$value": [0.65, 0, 0.35, 1],
        "$description": "Smooth in and out — dialog open/close, panel transitions"
      },
      "out": {
        "$type": "cubicBezier",
        "$value": [0.22, 1, 0.36, 1],
        "$description": "Ease out — entrances that start fast, settle gently"
      },
      "out-expo": {
        "$type": "cubicBezier",
        "$value": [0.16, 1, 0.3, 1],
        "$description": "Exponential ease out — image reveals, dramatic entrances"
      },
      "out-back": {
        "$type": "cubicBezier",
        "$value": [0.34, 1.56, 0.64, 1],
        "$description": "Ease out with overshoot — playful bounce for small UI elements"
      }
    }
  },

  "zIndex": {
    "$description": "Z-index hierarchy. All values defined in globals.css.",

    "preloader": {
      "$type": "number",
      "$value": 9999,
      "$description": "Loading screen — always on top"
    },
    "transition": {
      "$type": "number",
      "$value": 9998,
      "$description": "Page transition overlay"
    },
    "cursor": {
      "$type": "number",
      "$value": 9997,
      "$description": "Custom cursor — above transitions"
    },
    "lightbox": {
      "$type": "number",
      "$value": 9996,
      "$description": "Image lightbox"
    },
    "header": {
      "$type": "number",
      "$value": 100,
      "$description": "Fixed header — above page content, below overlays"
    },
    "mobile-menu": {
      "$type": "number",
      "$value": 99,
      "$description": "Mobile menu overlay — just below header"
    },
    "cookie": {
      "$type": "number",
      "$value": 98,
      "$description": "Cookie banner"
    },
    "mobile-cta": {
      "$type": "number",
      "$value": 97,
      "$description": "Mobile sticky CTA bar"
    }
  },

  "breakpoint": {
    "$description": "Responsive breakpoints. Note: these are NOT tokenized in globals.css — they are used inline in component CSS media queries.",

    "sm": {
      "$type": "dimension",
      "$value": "480px",
      "$description": "Large mobile"
    },
    "md": {
      "$type": "dimension",
      "$value": "768px",
      "$description": "Tablet — gutter increases from 20px to 40px at this breakpoint"
    },
    "lg": {
      "$type": "dimension",
      "$value": "1024px",
      "$description": "Desktop layouts"
    },
    "xl": {
      "$type": "dimension",
      "$value": "1200px",
      "$description": "Wide desktop — header gap increases"
    },
    "max": {
      "$type": "dimension",
      "$value": "1280px",
      "$description": "Container max-width — layout caps out here"
    },
    "container-wide": {
      "$type": "dimension",
      "$value": "1440px",
      "$description": "Wide container variant for full-bleed sections"
    }
  },

  "grid": {
    "$description": "Layout grid system",

    "columns": {
      "$type": "number",
      "$value": 12,
      "$description": "12-column grid"
    },
    "gutter-mobile": {
      "$type": "dimension",
      "$value": "20px",
      "$description": "Column gutter on mobile (<768px)"
    },
    "gutter-desktop": {
      "$type": "dimension",
      "$value": "40px",
      "$description": "Column gutter on tablet+ (768px+)"
    },
    "container": {
      "$type": "dimension",
      "$value": "1280px",
      "$description": "Standard container max-width"
    },
    "container-wide": {
      "$type": "dimension",
      "$value": "1440px",
      "$description": "Wide container max-width"
    }
  }
}
